<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RunningplActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/jhdzxz"
            android:layout_width="280dp"
            android:layout_height="400dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:background="@color/Lightcolor"
            android:gravity="center"
            >
            <TextView
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="@color/yellow"
                android:textSize="20dp"
                android:text="@string/ydts"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:text="@string/Content"
                android:textColor="@color/bai_1"
                android:background="@color/Lightcolor01"
                android:textSize="16dp"
                />
            <Button
                android:id="@+id/ycts"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="@string/knows"
                android:textSize="18dp"
                android:textColor="@color/bai_1"
                android:background="@drawable/shape04"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>