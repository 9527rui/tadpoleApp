<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <com.example.custom_view.MyScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:startColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hui_02"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/cklsjl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape08"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/ckls"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/lv"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="155dp"
                    android:text="@string/seeing"
                    android:textSize="16dp"
                    android:textColor="@color/blue"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/left"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e7e7e7"
                ></LinearLayout>

            <LinearLayout
                android:id="@+id/lldraw"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.custom_view.StepArcView
                    android:id="@+id/cc"
                    android:layout_width="300dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#e7e7e7"
                ></LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/yd_zlc" />
                    <TextView
                        android:id="@+id/slc"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/start_yund"
                        android:textSize="26dp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="公里"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:gravity="end"
                        android:text="最近7天" />
                </LinearLayout>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#9e9e9e" />

                <com.example.custom_view.StatisticsArcView
                    android:id="@+id/dd"
                    android:layout_width="330dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="271dp" />

                <Button
                    android:id="@+id/begin"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:text="@string/start_motion"
                    android:textColor="@color/start_yund"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="630dp"
                android:orientation="vertical"
                android:background="#fff"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zx01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/ydzx"
                        android:gravity="center"
                        android:textSize="18dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="1dp"
                    android:background="#9e9e9e" />
                <ListView
                    android:id="@+id/list_kedou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                </LinearLayout>
            </LinearLayout>
    </com.example.custom_view.MyScrollView>

    <LinearLayout
        android:id="@+id/lnyc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="#a1fff1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="当前:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/start_yund" />

        <TextView
            android:id="@+id/tdqb"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/start_yund" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="步"
            android:textColor="@color/start_yund" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="里程:"
            android:textColor="@color/start_yund" />

        <TextView
            android:id="@+id/tdql"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/start_yund" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="公里"
            android:textColor="@color/start_yund" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="燃烧:"
            android:textColor="@color/start_yund" />

        <TextView
            android:id="@+id/tdqr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/start_yund" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="千卡"
            android:textColor="@color/start_yund" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>