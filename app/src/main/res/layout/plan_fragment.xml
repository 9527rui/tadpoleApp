<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hui_01"
    >
    <LinearLayout
        android:id="@+id/pl_mine"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape08"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/mine_plan"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:text="@string/seeing"
            android:textSize="16dp"
            android:textColor="@color/blue"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/left"

            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/pl_running"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape08"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/pb_pl"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/lv"
            android:gravity="center_vertical"
            android:text="@string/running_plan"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pl_qx"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@drawable/shape08"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/qx_pl"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/lv"
            android:gravity="center_vertical"
            android:text="@string/cycling_plan"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pl_ds"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@drawable/shape08"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ds_pl"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="@color/lv"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/climbing_plan"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pl_jz"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@drawable/shape08"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/jz_pl"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="@color/lv"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/going_plan"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/plan_bj"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/more"
                android:gravity="center"
                android:textColor="@color/red"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>